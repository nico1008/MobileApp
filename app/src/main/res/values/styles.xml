<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="onBoardingCircleStyle">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="borderRoundPercent">100</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="h5Medium">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">@color/dark_background</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="h6Medium">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="h5MediumLanguageButton">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.01</item>

    </style>

    <style name="selectBlueButton">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_select_button_background</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="bodyMedium">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/fredoka_medium_regular</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="textInput">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/fredoka_medium_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

</resources>