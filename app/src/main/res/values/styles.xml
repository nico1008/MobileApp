<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="onBoardingCircleStyle">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="borderRoundPercent">100</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="h5Medium">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="h5MediumLanguageButton">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="h6MediumButton">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="bodyMedium">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/fredoka_medium_regular</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="textInput">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/fredoka_medium_regular</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorHint">@color/opacity_gray_dark_50</item>
    </style>

    <style name="textActivity">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/fredoka_medium_regular</item>
        <item name="android:textColor">?attr/colorActivity</item>
    </style>

    <style name="bodyMediumSmallTitles">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/fredoka_medium_regular</item>
        <item name="android:textColor">?attr/colorSmallTitle</item>
    </style>
