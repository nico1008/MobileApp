<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding.LanguageSelect">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="670dp"
        android:background="#410FA3"
        app:layout_constraintBottom_toTopOf="@+id/toolbar_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            style="@style/bodyMedium"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fredoka_semibold"
            android:text="@string/choose_lang_title"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/toolbar_subtitle"
        android:layout_width="339dp"
        android:layout_height="31dp"
        android:layout_below="@id/topAppBar"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="625dp"
        android:fontFamily="@font/fredoka_medium_regular"
        android:gravity="center"
        android:text="@string/whats_your_language"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/russian_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_rounded_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:text="@string/russian"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_subtitle" />

    <Button
        android:id="@+id/english_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_rounded_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:text="@string/english"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/russian_button" />

    <Button
        android:id="@+id/chinese_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_rounded_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:text="@string/chinese"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/english_button" />

    <Button
        android:id="@+id/belarus_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_rounded_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:text="@string/belarus"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chinese_button" />

    <Button
        android:id="@+id/kazakh_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_rounded_change_lang"
        android:fontFamily="@font/fredoka_semibold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:text="@string/kazakh"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/belarus_button" />

    <Button
        style="@style/selectBlueButton"
        android:id="@+id/choose_button"
        android:layout_marginBottom="33dp"
        android:background="@drawable/button_rounded_blue"
        android:fontFamily="@font/fredoka_semibold"
        android:text="@string/choose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>